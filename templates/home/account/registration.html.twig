{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
        
        {{ form_start(form) }}
        
        <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                        <h1 class="text-center" class="my-5">Inscription</h1>
                        <hr>
                        <div class="text-center" class="alert alert-light">
                                <h4>Mail</h4>
                                {{ form_widget(form.email) }}
                                <h4>Pseudo</h4>
                                {{ form_widget(form.pseudo) }}
                                <h4>Mot de passe</h4>
                                {{ form_widget(form.password) }}
                                <h4>Confirmez le mot de passe</h4>
                                {{ form_widget(form.passwordConfirm) }}
                        </div>
                        <div class="text-center" class="alert alert-light">
                                <p>Pour terminer votre inscription, cliquez sur le bouton ci-dessous</p>
                                <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Inscription</button>
                        </div>
                </div>
        </div>
        {{ form_end(form) }}
        
</div>

{% endblock %}